{
  "extends": ["next/core-web-vitals", "next/typescript"],
  "ignorePatterns": [
    ".source/**/*",
    "node_modules/**/*",
    ".next/**/*",
    "out/**/*"
  ],
  "rules": {
    "@typescript-eslint/no-explicit-any": "error",
    "@typescript-eslint/no-unused-vars": [
      "error",
      {
        "argsIgnorePattern": "^_",
        "varsIgnorePattern": "^_"
      }
    ],
    "react/no-unescaped-entities": "error",
    "@next/next/no-img-element": "warn"
  }
}